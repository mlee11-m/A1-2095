<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Recipe</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
  <header class="bg-dark text-white text-center py-4">
    <h1>Edit Recipe - <%= recipe.title %></h1>
    <nav class="d-flex justify-content-center mt-2">
      <a class="btn btn-primary btn-sm me-1" href="/">Home </a>
      <a class="btn btn-primary btn-sm me-1" href="/recipes-<%= studentID %>">Back to Recipes</a>
    </nav>
  </header>

  <main class="container flex-grow-1 my-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title mb-4 text-center">Edit Item Details</h2>
    
    <form action="/recipes/edit/<%= recipe.recipeId %>-<%= studentID %>" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="title" class="form-control" value="<%= recipe.title %>" required>
      </div>

      <div class="mb-3">
        <label for="chef" class="form-label">Chef</label>
        <input type="text" id="chef" name="chef" class="form-control" value="<%= recipe.chef %>" required>
      </div>

      <div class="mb-3">
        <label for="userId" class="form-label">User ID</label>
        <input type="text" id="userId" name="userId" class="form-control" value="<%= recipe.userId %>" readonly>
      </div>

      <div class="mb-3">
        <label for="ingredients" class="form-label">Ingredients (comma or newline separated)</label>
        <textarea id="ingredients" name="ingredients" class="form-control" rows="3" required><%= recipe.ingredients.join(', ') %></textarea>
      </div>

      <div class="mb-3">
        <label for="instructions" class="form-label">Instructions (comma or newline separated)</label>
        <textarea id="instructions" name="instructions" class="form-control" rows="4" required><%= recipe.instructions.join(', ') %></textarea>
      </div>

      <div class="mb-3">
        <label for="mealType" class="form-label">Meal Type</label>
        <select id="mealType" name="mealType" class="form-select" required>
          <option value="Breakfast" <%= recipe.mealType === 'Breakfast' ? 'selected' : '' %>>Breakfast</option>
          <option value="Lunch" <%= recipe.mealType === 'Lunch' ? 'selected' : '' %>>Lunch</option>
          <option value="Dinner" <%= recipe.mealType === 'Dinner' ? 'selected' : '' %>>Dinner</option>
          <option value="Snack" <%= recipe.mealType === 'Snack' ? 'selected' : '' %>>Snack</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="cuisineType" class="form-label">Cuisine</label>
        <select id="cuisineType" name="cuisineType" class="form-select" required>
          <% const cuisines = ['Italian','Asian','Mexican','American','French','Indian','Mediterranean','Other']; %>
          <% cuisines.forEach(c => { %>
            <option value="<%= c %>" <%= recipe.cuisineType === c ? 'selected' : '' %>><%= c %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="prepTime" class="form-label">Prep Time (minutes)</label>
        <input type="number" id="prepTime" name="prepTime" class="form-control" value="<%= recipe.prepTime %>" min="1" required>
      </div>

      <div class="mb-3">
        <label for="difficulty" class="form-label">Difficulty</label>
        <select id="difficulty" name="difficulty" class="form-select" required>
          <option value="Easy" <%= recipe.difficulty === 'Easy' ? 'selected' : '' %>>Easy</option>
          <option value="Medium" <%= recipe.difficulty === 'Medium' ? 'selected' : '' %>>Medium</option>
          <option value="Hard" <%= recipe.difficulty === 'Hard' ? 'selected' : '' %>>Hard</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="servings" class="form-label">Servings</label>
        <input type="number" id="servings" name="servings" class="form-control" value="<%= recipe.servings %>" min="1" required>
      </div>

      <div class="d-flex justify-content-end">
        <a href="/recipes-<%= studentID %>" class="btn btn-secondary me-2">Cancel</a>
        <button type="submit" class="btn btn-info">Save Changes</button>
      </div>
    </form>
         <% if (message) { %>
        <div class="popup"><%= message %></div>
        <% } %>
    </div>
  </main>
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">&copy; 2025 FoodHub | All Rights Reserved</p>
  </footer>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
