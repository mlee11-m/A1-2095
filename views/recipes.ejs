<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe List</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
  <header class="bg-dark text-white text-center py-4">
    <h1>All Recipes</h1>
    <nav class="d-flex justify-content-center mt-2">
      <a class="btn btn-warning btn-sm me-1" href="/">Home</a>
      <a class="btn btn-warning btn-sm me-1" href="/delete-recipe-<%= studentID %>">Delete Recipe</a>
      <a class="btn btn-warning btn-sm me-1" href="/recipes/new-<%= studentID %>">Add New Recipe</a>
      <% if (session && session.userId) { %>
        <a class="btn btn-danger btn-sm ms-2" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-success btn-sm ms-2" href="/login-<%= studentID %>">Login</a>
      <% } %>
    </nav>
  </header>

  <main class="container flex-grow-1 py-4">
    <% if (!recipes || recipes.length === 0) { %>
      <div class="alert alert-warning text-center">No recipes available.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Title</th>
              <th scope="col">Chef</th>
              <th scope="col">Ingredients</th>
              <th scope="col">Instructions</th>
              <th scope="col">Meal Type</th>
              <th scope="col">Cuisine</th>
              <th scope="col">Prep Time</th>
              <th scope="col">Difficulty</th>
              <th scope="col">Servings</th>
              <th scope="col">Created Date</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% recipes.forEach(recipe => { %>
              <tr>
                <td class="text-center"><%= recipe.recipeId %></td>
                <td><%= recipe.title %></td>
                <td><%= recipe.chef %></td>
                <td>
                  <ul class="mb-0">
                    <% recipe.ingredients.forEach(i => { %>
                      <li><%= i %></li>
                    <% }) %>
                  </ul>
                </td>
                <td>
                  <ol class="mb-0">
                    <% recipe.instructions.forEach(step => { %>
                      <li><%= step %></li>
                    <% }) %>
                  </ol>
                </td>
                <td><%= recipe.mealType %></td>
                <td><%= recipe.cuisineType %></td>
                <td><%= recipe.prepTime %> min</td>
                <td><%= recipe.difficulty %></td>
                <td><%= recipe.servings %></td>
                <td>
                  <%= recipe.createdDate ? recipe.createdDate.toISOString().split('T')[0] : '-' %>
                </td>
                <td class="text-center">
                  <a href="/recipes/edit/<%= recipe.recipeId %>-<%= studentID %>" class="btn btn-info btn-sm">
                    Edit
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">&copy; 2025 FoodHub | All Rights Reserved</p>
  </footer>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
