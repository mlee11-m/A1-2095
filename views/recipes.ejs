<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe List</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
  <header class="bg-dark text-white text-center py-4">
    <h1>All Recipes</h1>
    <nav class="d-flex justify-content-center mt-2">
      <a class="btn btn-warning btn-sm me-1" href="/">Home</a>
      <% if (session && session.userRole === "chef") { %>
        <a class="btn btn-warning btn-sm me-1" href="/delete-recipe-<%= studentID %>">Delete Recipe</a>
        <a class="btn btn-warning btn-sm me-1" href="/recipes/new-<%= studentID %>">Add New Recipe</a>
      <% } %>
      <% if (session && session.userId) { %>
        <a class="btn btn-danger btn-sm ms-2" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-success btn-sm ms-2" href="/login-<%= studentID %>">Login</a>
      <% } %>
    </nav>
  </header>

  <main class="container flex-grow-1 py-4">
    <% if (message) { %>
      <div id="popup-message" class="alert alert-success position-fixed top-0 end-0 m-3" style="z-index:1050;">
        <%= message %>
      </div>
    <% } %>

    <% if (!recipes || recipes.length === 0) { %>
      <div class="alert alert-warning text-center">No recipes available.</div>
    <% } else { %>

      <!-- Recipe Selection Interface -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Find a Recipe</h5>

          <!-- Dropdown selection -->
          <form id="recipeDropdownForm" class="mb-3">
            <label for="recipeDropdown" class="form-label">Select by Title:</label>
            <select id="recipeDropdown" class="form-select">
              <option value="">-- Choose a recipe --</option>
              <% recipes.forEach(recipe => { %>
                <option value="<%= recipe.recipeId %>">
                  <%= recipe.title %> (ID: <%= recipe.recipeId %>)
                </option>
              <% }) %>
            </select>
          </form>

          <!-- Search by ID -->
          <form id="recipeSearchForm" class="d-flex">
            <input type="text" id="recipeIdInput" class="form-control me-2" placeholder="Enter Recipe ID">
            <button type="submit" class="btn btn-primary">Go</button>
          </form>
        </div>
      </div>

      <!-- Existing Recipe Table -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Title</th>
              <th scope="col">Chef</th>
              <th scope="col">User Id</th>
              <th scope="col">Ingredients</th>
              <th scope="col">Instructions</th>
              <th scope="col">Meal Type</th>
              <th scope="col">Cuisine</th>
              <th scope="col">Prep Time</th>
              <th scope="col">Difficulty</th>
              <th scope="col">Servings</th>
              <th scope="col">Created Date</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% recipes.forEach(recipe => { %>
              <tr>
                <td class="text-center"><%= recipe.recipeId %></td>
                <td><%= recipe.title %></td>
                <td><%= recipe.chef %></td>
                <td><%= recipe.userId || '-' %></td>
                <td>
                  <ul class="mb-0">
                    <% recipe.ingredients.forEach(i => { %>
                      <li><%= i %></li>
                    <% }) %>
                  </ul>
                </td>
                <td>
                  <ol class="mb-0">
                    <% recipe.instructions.forEach(step => { %>
                      <li><%= step %></li>
                    <% }) %>
                  </ol>
                </td>
                <td><%= recipe.mealType %></td>
                <td><%= recipe.cuisineType %></td>
                <td><%= recipe.prepTime %> min</td>
                <td><%= recipe.difficulty %></td>
                <td><%= recipe.servings %></td>
                <td>
                  <%= recipe.createdDate ? recipe.createdDate.toISOString().split('T')[0] : '-' %>
                </td>
                <td class="text-center">
                  <% if (session && session.userRole === "chef" && recipe.userId === session.userId) { %>
                    <a href="/recipes/edit/<%= recipe.recipeId %>-<%= studentID %>" class="btn btn-info btn-sm">
                      Edit
                    </a>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>

  <script>
    // Dropdown navigation
    document.getElementById("recipeDropdown")?.addEventListener("change", function () {
      if (this.value) {
        window.location.href = `/recipes/edit/${this.value}-<%= studentID %>`;
      }
    });

    // Search by ID navigation
    document.getElementById("recipeSearchForm")?.addEventListener("submit", function (e) {
      e.preventDefault();
      const recipeId = document.getElementById("recipeIdInput").value.trim();
      if (recipeId) {
        window.location.href = `/recipes/edit/${recipeId}-<%= studentID %>`;
      }
    });

    // Auto-dismiss popup
    const popup = document.getElementById('popup-message');
    if (popup) {
      setTimeout(() => {
        popup.style.transition = "opacity 0.5s";
        popup.style.opacity = "0";
        setTimeout(() => popup.remove(), 500);
      }, 2500);
    }
  </script>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">&copy; 2025 FoodHub | All Rights Reserved</p>
  </footer>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
