<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe List</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
  <header class="bg-dark text-white text-center py-4">
    <h1>All Recipes</h1>
    <nav class="d-flex justify-content-center mt-2">
      <a class="btn btn-warning btn-sm me-1" href="/">Home</a>
      <a class="btn btn-warning btn-sm me-1" href="/delete-recipe">Delete Recipe</a>
      <a class="btn btn-warning btn-sm me-1" href="/recipes/new">Add New Recipe</a>
    </nav>
  </header>

  <main class="container flex-grow-1 py-4">
    <% if (recipes.length === 0) { %>
      <div class="alert alert-warning text-center">No recipes available.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Chef</th>
              <th>Ingredients</th>
              <th>Instructions</th>
              <th>Meal Type</th>
              <th>Cuisine</th>
              <th>Prep Time</th>
              <th>Difficulty</th>
              <th>Servings</th>
              <th>Created Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% recipes.forEach(recipe => { %>
              <tr>
                <td><%= recipe.recipeId %></td>
                <td><%= recipe.title %></td>
                <td><%= recipe.chef %></td>
                <td>
                  <ul>
                    <% recipe.ingredients.forEach(i => { %>
                      <li><%= i %></li>
                    <% }) %>
                  </ul>
                </td>
                <td>
                  <ol>
                    <% recipe.instructions.forEach(step => { %>
                      <li><%= step %></li>
                    <% }) %>
                  </ol>
                </td>
                <td><%= recipe.mealType %></td>
                <td><%= recipe.cuisineType %></td>
                <td><%= recipe.prepTime %> min</td>
                <td><%= recipe.difficulty %></td>
                <td><%= recipe.servings %></td>
                <td><%= recipe.createdDate %></td>
                <td>
                  <a href="/recipes/edit/<%= recipe.recipeId %>" class="btn btn-info btn-sm me-1">
                    <button type="button">Edit</button>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </main>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">&copy; 2025 FoodHub | All Rights Reserved</p>
  </footer>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
