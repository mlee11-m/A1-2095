<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory List</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">
  <header class="bg-dark text-white text-center py-4">
    <h1>All Inventory Items</h1>
    <nav class="d-flex justify-content-center mt-2">
      <a class="btn btn-warning btn-sm me-1" href="/">Home </a>

      <li><a class="btn btn-warning btn-sm me-1" href="/inventory/new">Add New Inventory Item</a></li>
    </nav>
  </header>

  <main class="container flex-grow-1">
    <% if (inventory.length === 0) { %>
      <div class="alert alert-warning text-center" role="alert"></div>
      <p>No inventory items available.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Ingredient</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Category</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% inventory.forEach(item => { %>
            <tr>
              <td><%= item.inventoryId %></td>
              <td><%= item.userId %></td>
              <td><%= item.ingredientName %></td>
              <td><%= item.quantity %></td>
              <td><%= item.unit %></td>
              <td><%= item.category %></td>
              <td>
                
                <a href="/inventory/edit/<%= item.inventoryId %>" class="btn btn-info btn-sm me-1">
                  <button type="button">Edit</button>
                </a>
                
                <form action="/inventory/delete/<%= item.inventoryId %>" method="POST" style="display:inline;" class="btn btn-danger btn-sm me-1">
                  <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">&copy; 2025 FoodHub | All Rights Reserved</p>
  </footer>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
