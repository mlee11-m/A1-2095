<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory List</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

  <header class="bg-dark text-white text-center py-4">
    <h1>All Inventory Items</h1>
    <nav class="d-flex justify-content-center mt-2">
      <a class="btn btn-warning btn-sm me-1" href="/">Home</a>
      <a class="btn btn-warning btn-sm me-1" href="/delete-inventory-<%= studentID %>">Delete Inventory</a>
      <a class="btn btn-warning btn-sm me-1" href="/inventory/new-<%= studentID %>">Add New Inventory Item</a>
      <% if (session && session.userId) { %>
        <a class="btn btn-danger btn-sm ms-2" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-success btn-sm ms-2" href="/login-<%= studentID %>">Login</a>
      <% } %>
    </nav>
  </header>

  <main class="container flex-grow-1 mt-4">
    <!-- Selection Interface -->
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Find an Inventory Item</h5>

        <!-- Dropdown -->
        <form id="inventoryDropdownForm" class="mb-3">
          <label for="inventoryDropdown" class="form-label">Select by Ingredient:</label>
          <select id="inventoryDropdown" class="form-select">
            <option value="">-- Choose an item --</option>
            <% inventory.forEach(item => { %>
              <option value="<%= item.inventoryId %>">
                <%= item.ingredientName %> (ID: <%= item.inventoryId %>)
              </option>
            <% }) %>
          </select>
        </form>

        <!-- Search by ID -->
        <form id="inventorySearchForm" class="d-flex">
          <input type="text" id="inventoryIdInput" class="form-control me-2" placeholder="Enter Inventory ID">
          <button type="submit" class="btn btn-primary">Go</button>
        </form>
      </div>
    </div>

    <% if (inventory.length === 0) { %>
      <div class="alert alert-warning text-center">No inventory items available.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>Inventory ID</th>
              <th>User ID</th>
              <th>Ingredient</th>
              <th>Quantity</th>
              <th>Unit</th>
              <th>Category</th>
              <th>Purchase Date</th>
              <th>Expiration Date</th>
              <th>Location</th>
              <th>Cost</th>
              <th>Created Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% inventory.forEach(item => { %>
              <tr>
                <td><%= item.inventoryId %></td>
                <td><%= item.userId %></td>
                <td><%= item.ingredientName %></td>
                <td><%= item.quantity %></td>
                <td><%= item.unit %></td>
                <td><%= item.category %></td>
                <td><%= item.purchaseDate ? item.purchaseDate.toISOString().split('T')[0] : '-' %></td>
                <td><%= item.expirationDate ? item.expirationDate.toISOString().split('T')[0] : '-' %></td>
                <td><%= item.location || '-' %></td>
                <td>$<%= (item.cost ?? 0).toFixed(2) %></td>
                <td><%= item.createdDate ? item.createdDate.toISOString().split('T')[0] : '-' %></td>
                <td>
                  <a href="/inventory/edit/<%= item.inventoryId %>-<%= studentID %>" class="btn btn-info btn-sm">Edit</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="text-end mt-3">
          <strong>Total Inventory Value: $<%= totalValue.toFixed(2) %></strong>
        </div>
      </div>
    <% } %>

    <!-- Aggregation & Alerts -->
    <div class="mt-4">
      <h4>Inventory Insights</h4>

      <!-- Total Value -->
      <div class="alert alert-info">
         Total Inventory Value: <strong>$<%= totalValue.toFixed(2) %></strong>
      </div>

      <!-- Low Stock Alerts -->
      <% if (lowStockItems && lowStockItems.length > 0) { %>
        <div class="alert alert-warning">
           <strong>Low Stock Items (below 5 units):</strong>
          <ul class="mb-0">
            <% for (var i = 0; i < lowStockItems.length; i++) { 
                 var li = lowStockItems[i];
            %>
              <li><%= li.ingredientName %> - <%= li.quantity %> <%= li.unit %></li>
            <% } %>
          </ul>
        </div>
      <% } %>

      <!-- Expiration Alerts -->
      <% if (typeof expiringSoonItems !== 'undefined' && expiringSoonItems && expiringSoonItems.length > 0) { %>
        <div class="alert alert-danger">
           <strong>Items Expiring Soon (within 7 days):</strong>
          <ul class="mb-0">
            <% for (var j = 0; j < expiringSoonItems.length; j++) {
                 var ei = expiringSoonItems[j];
            %>
              <li><%= ei.ingredientName %> - expires on 
                <%= ei.expirationDate ? ei.expirationDate.toISOString().split('T')[0] : '-' %>
              </li>
            <% } %>
          </ul>
        </div>
      <% } %>
    </div>

  </main>

  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">&copy; 2025 FoodHub | All Rights Reserved</p>
  </footer>

  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script>
    // Dropdown navigation
    document.getElementById("inventoryDropdown").addEventListener("change", function () {
      if (this.value) {
        window.location.href = `/inventory/edit/${this.value}-<%= studentID %>`;
      }
    });

    // Search by ID navigation
    document.getElementById("inventorySearchForm").addEventListener("submit", function (e) {
      e.preventDefault();
      const inventoryId = document.getElementById("inventoryIdInput").value.trim();
      if (inventoryId) {
        window.location.href = `/inventory/edit/${inventoryId}-<%= studentID %>`;
      }
    });
  </script>
</body>
</html>
